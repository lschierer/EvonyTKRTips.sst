<!DOCTYPE html>
<html>
  <head>
    {% block head %}
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>{{ pageTitle }}</title>
    {% endblock %}
  </head>
  <body>
    {% block body %}
      <section class="header">
      {% block header%}
      {% endblock%}
      </section>

      <section class="sidebar">
      {% block sidebar%}
      {% endblock%}
      </section>

      <section class="main">
      {% block main%}
      {% endblock%}
      </section>

      <section class="footer">
      {% block footer%}
      {% endblock%}
      </section>
    {% endblock %}
  </body>
</html>