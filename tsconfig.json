{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "module": "esNext",
        "moduleResolution": "node",
        "rootDir": ".",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "target": "es2017",
        "types": ["mocha", "chai", "sinon", "karma-chai"],
        "typeRoots": ["./node_modules/@types", "./types"],
        "lib": ["es2017", "dom"],
        "outDir": "lib"
    },
    "exclude": ["scripts", "dist", "tasks", "linters", "example-project"]
}
